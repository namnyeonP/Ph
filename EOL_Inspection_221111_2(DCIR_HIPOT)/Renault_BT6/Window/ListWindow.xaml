<Window x:Class="Renault_BT6.윈도우.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListWindow" Height="450" Width="200" WindowStyle="None" ResizeMode="NoResize">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard >
                    <DoubleAnimation Duration="00:00:00.2" Storyboard.TargetProperty="Opacity" From="0" To="1" AccelerationRatio=".1"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <ListView Grid.Row="2"
                                FontSize="15" Background="{StaticResource ControlContentBrush}"
                                FontWeight="SemiBold" 
                                Name="detail_dg" 
                                ItemsSource="{Binding}" BorderThickness="3"
                                IsSynchronizedWithCurrentItem="True">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" />
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Value_}" Header="Value" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
